@using NaftanRailway.WebUI.HtmlHelpers
@model NaftanRailway.WebUI.Areas.NomenclatureScroll.Models.IndexModelView

<table id="" class="small table table-hover table-responsive table-striped table-condensed table-bordered table-fixed">
    <thead class="tableHeader" style="background-color: rgb(231, 255, 255); border: 2px solid black;">
    <tr><!--Don't work external CSS-->
        <th colspan="2" class="text-center" style="border: 1px solid black;">№ перечня</th>
        <th class="text-center" style="border: 1px solid black;">Результат<br/>сверки</th>
        <th class="text-center" style="border: 1px solid black;">Признак<br/>коррект.<br/>перечня</th>
        <th class="text-center" style="border: 1px solid black;">Вид<br/>услуг</th>
        <th class="text-center" style="border: 1px solid black;">Период<br/>отчётности</th>
        <th class="text-center" style="border: 1px solid black;">№ счёт-<br/>фактуры</th>
        <th class="text-center" style="border: 1px solid black;">Дата счёт-<br/>фактуры</th>
        <th class="text-center" style="border: 1px solid black;"> Стоимость услуг<br/>с НДС, руб.</th>
        <th class="text-center" style="border: 1px solid black;">НДС, руб.</th>
        <th class="text-center" style="border: 1px solid black;">Начальная<br/>дата<br/>данных</th>
        <th class="text-center" style="border: 1px solid black;">Конечная<br/>дата<br/>данных</th>
        <th class="text-center" style="border: 1px solid black;">Список кодов сборов по услугам в перечне</th>
        <th class="text-center .rotate" style="border: 1px solid black;">Число<br/>записей в перечне</th>
        <th class="text-center" style="border: 1px solid black;">Дата эл. письма ОРЦ</th>
        <th class="text-center" style="border: 1px solid black;">Текущая версия</th>
    </tr>
    </thead>
    <tbody class="text-center" id="scrollList">
        @{ Html.RenderPartial("_krtNaftanRows", @Model.ListKrtNaftan);}
    </tbody>
</table>
<!--Ajax paging-->
<div class="bottom-right pull-right">
    <ul class="pagination">
    @{for (int q = 1; q <= Model.PagingInfo.TotalPages; q++){
            <li class="@(q == Model.PagingInfo.CurrentPage ? "active":"")">
                @Ajax.RouteLink(q.ToString(),
                    new RouteValueDictionary() { { "page", q }},
                        new AjaxOptions(){
                            HttpMethod = "Get",
                            UpdateTargetId = "ScrollTable",
                            InsertionMode = InsertionMode.Replace,
                            OnSuccess = "PaggingSuccess"
                        })
            </li>
        }
    }
    </ul>
</div>
