@model ExceptionViewModel
@{
    Layout = "~/Views/Shared/_Layout.HttpErrors.cshtml";
    var collModules = Model.Modules;
    var modelExcept = Model.Model;
}
<style type="text/css">
    td, th {
        vertical-align: middle !important;
    }
</style>
<body>
    <div class="container-fluid">
        <h2>Warning exception! <span class="small">Last update 30.12.2016</span></h2>
        <details>
            <summary>Basic exception information</summary>
            <table class="table table-bordered table-responsive table-striped table-hover small">
                <thead>
                    <tr><th colspan="2" class="warning">Some information about invoke error</th></tr>
                </thead>
                <tbody>
                    <tr><th colspan="2" class="text-center info">Model.CurrentContext</th></tr>
                    <tr>
                        <th class="col-md-2"><span>request Url:</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.Request.RawUrl</td>
                    </tr>
                    <tr>
                        <th><span>User Name:</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.User.Identity.Name</td>
                    </tr>
                    <tr>
                        <th><span>Auth type:</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.User.Identity.AuthenticationType</td>
                    </tr>
                    <tr>
                        <th><span>Machine name:</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.Server.MachineName</td>
                    </tr>
                    <tr>
                        <th><span>IIS version:</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.Request.ServerVariables["SERVER_SOFTWARE"]</td>
                    </tr>
                    <tr>
                        <th><span>ASP.NET MVC version:</span></th>
                        <td>@typeof(Page).Assembly.GetName().Version</td>
                    </tr>
                    <tr>
                        <th><span>.NET Framework version:</span></th>
                        <td>@Environment.Version.ToString()</td>
                    </tr>
                    <tr>
                        <th><span>time-out (sec):</span></th>
                        <td>@modelExcept.RequestContext.HttpContext.Server.ScriptTimeout</td>
                    </tr>
                    <tr><th colspan="2" class="text-center info">Model.Controller</th></tr>
                    <tr>
                        <th><span>Action:</span></th>
                        <td>@modelExcept.Controller.ControllerContext.RouteData.Values["action"]</td>
                    </tr>
                    <tr>
                        <th><span>Controller:</span></th>
                        <td>@modelExcept.Controller.ControllerContext.RouteData.Values["controller"]</td>
                    </tr>
                    <tr><th colspan="2" class="text-center info">Model.Exception object</th></tr>
                    <tr>
                        <th><span>Message of current exception:</span></th>
                        <td>@modelExcept.Exception.Message</td>
                    </tr>
                    <tr>
                        <th><span>Method that throw current exception:</span></th>
                        <td>@modelExcept.Exception.TargetSite</td>
                    </tr>
                    <tr>
                        <th><span>Represent of the immediate frames  on the call stack:</span></th>
                        <td class="small">@modelExcept.Exception.StackTrace</td>
                    </tr>
                    <tr>
                        <th><span>Name of app or object that causes the error:</span></th>
                        <td>@modelExcept.Exception.Source</td>
                    </tr>
                    <tr>
                        <th><span>Help link associated with exception:</span></th>
                        <td>@modelExcept.Exception.HelpLink</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr><td colspan="2" class="warning">Please call me: 46-59 (automated control systems department)</td></tr>
                </tfoot>
            </table>
        </details>
        <details>
            <summary>Using @collModules.Length HttpModules</summary>
            <table class="table table-bordered table-responsive table-striped table-hover small">
                <thead>
                    <tr class="warning"><th class="text-center">Name</th><th class="text-center">Type</th></tr>
                </thead>
                <tbody>
                    @foreach (var x in collModules) {
                    <tr><td>@x.Item1</td><td>@x.Item2</td></tr>
                    }
                </tbody>
            </table>
        </details>
    </div>
</body>