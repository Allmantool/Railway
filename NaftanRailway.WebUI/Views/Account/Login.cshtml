@model NaftanRailway.WebUI.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Aутентификация";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row col-sm-12 col-md-6  col-md-offset-3">
        <p class="lead text-center"><strong>Пожалуйста пройдите аутентификацию:</strong></p>
        <div class="col-md-offset-1">@Html.ValidationSummary(true)</div>

        @using (Html.BeginForm()){
            @Html.AntiForgeryToken()

            <div class="form-group col-sm-12 col-md-8 col-md-offset-2">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", placeholder = "Имя пользователя"})
                </div>
            </div>
            
            <div class="form-group col-sm-12 col-md-8  col-md-offset-2">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Пароль"})
                </div>
            </div>

            <div class="form-group col-sm-12 col-md-4  col-md-offset-4">
                <button type="submit" class="btn btn-lg btn-primary btn-block">
                    Войти <span class="glyphicon glyphicon-log-in"></span>
                </button>
            </div>
        }
    </div>
</div>

