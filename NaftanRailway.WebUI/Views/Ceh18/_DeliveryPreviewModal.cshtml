@model IEnumerable<NaftanRailway.Domain.BusinessModels.ShippingInfoLine>
@{
    var numberRow = @Model.Count();
    var reportPeriod = (DateTime)@ViewBag.datePeriod;
    var indx=0;
}
<!--Date Modal-->
<div class="modal-dialog modal-lg" role="document">
    @using (Ajax.BeginForm("AddDocumentsInfo", new AjaxOptions() { HttpMethod = "Post" })) {
        @Html.Hidden("reportPeriod", reportPeriod);
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-center" id="gridSystemModalLabel">
                    Найдена @numberRow @((numberRow > 1) ? "записи" : "запись") по накладной: "@Model.FirstOrDefault().Shipping.n_otpr"
                </h4>
            </div>
            <div class="modal-body text-center">
                <table class="small table table-hover table-responsive table-striped table-condensed">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Тип операции:</th>
                            <th>Дата операции:</th>
                            <th>Вагон(ы):</th>
                            <th>Наименование груза:</th>
                            <th>Контрагент:</th>
                            <th>Склад:</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) { @(++indx)
                            <tr>
                                <td><input type="checkbox" checked /></td>
                                <td>@Html.Label("type_doc", (item.Shipping.type_doc == 1) ? "Отправка" : "Прибытие")</td>
                                <td>@item.Shipping.date_oper.Value.ToString("d MMM yyyy")</td>
                                <td>@String.Join(", ", @item.WagonsNumbers.Select(x => x.n_vag))</td>
                                <td class="small">@item.CargoEtsngName.name</td>
                                <td class="small">@((item.Shipping.type_doc == 1) ? @item.Shipping.nam_pol : @item.Shipping.nam_otpr)</td>
                                <td class="small">@Html.TextBox("Warehouse", @item.Warehouse, new { @class = "text-center form-control input-sm", type = "number" })
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-primary">Подтвердить</button>
            </div>
        </div>
    }
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->     