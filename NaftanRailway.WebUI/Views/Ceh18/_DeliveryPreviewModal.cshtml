@model IEnumerable<NaftanRailway.Domain.BusinessModels.ShippingInfoLine>
@{
    var numberRow = @Model.Count();
}
<!--Date Modal-->
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title text-center" id="gridSystemModalLabel">
                Найдена @numberRow  @((numberRow > 1) ? "записи" : "запись") по накладной: "@Model.FirstOrDefault().Shipping.n_otpr"
            </h4>
        </div>
        <div class="modal-body text-center">
            @*<div class="panel panel-primary text-center">
                <div class="panel-heading">Panel heading</div>*@
                <table class="small table table-hover table-responsive table-striped table-condensed">
                    <thead >
                        <tr>
                            <th>Тип операции:</th>
                            <th>Дата операции:</th>
                            <th>Вагон(ы):</th>
                            <th>Груз:</th>
                            <th>Отправитель/Получитель</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@((item.Shipping.type_doc == 1) ? "Отправка" : "Прибытие")</td>
                                <td>@item.Shipping.date_oper.Value.ToString("d MMM yyyy")</td>
                                <td>@String.Join(", ", @item.WagonsNumbers.Select(x => x.n_vag))</td>
                                <td class="small">@item.CargoEtsngName.name</td>
                                <td class="small">@((item.Shipping.type_doc == 1) ? @item.Shipping.nam_pol : @item.Shipping.nam_otpr)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @*@{ Html.RenderPartial("DispatchsMini");}*@
            @*</div>*@
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            <button type="button" class="btn btn-primary">Подтвердить</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->     