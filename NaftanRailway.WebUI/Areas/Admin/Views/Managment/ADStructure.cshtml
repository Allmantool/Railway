@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <div data-bind="if: $root.adminPrincipal !== null" class="row">
        <table class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Ф.И.О:</th>
                    <th>Имя в домене:</th>
                    <th>Имя машины:</th>
                    <th>Почта:</th>
                    <th>Телефон:</th>
                </tr>
            </thead>
            <tbody>
                <tr data-bind="with: $root.adminPrincipal">
                    <td data-bind="text: displayName"></td>
                    <td data-bind="text: principalName"></td>
                    <td data-bind="text: sam"></td>
                    <td data-bind="text: emailAddress"></td>
                    <td data-bind="text: phone"></td>
                </tr>
            </tbody>
        </table>
        <h2 data-bind="text: 'Текущий пользователь: ' + $root.adminPrincipal().displayName()" class="page-header text-center"></h2>
        <div class="col-lg-3">
            <h3>Группы:</h3>
            <div data-bind="foreach: $root.adminPrincipal().groups" class="list-group small">
                <a data-bind="text: name, attr: {'href': name()}, css: {'active': $data.name() === $root.activeGroup().name()}, click: $root.usersInGroup.bind($data)" class="list-group-item"></a>
            </div>
        </div>
        <div class="col-lg-9">
            <h3 class="text-center">Другие участники выбранной группы: (20)</h3>
            <div data-bind="css: {'overlayTable': $root.loadingState()}, foreach: $root.userPrincipals" class="col-lg-12" style="float: left;">
                <div data-bind="text: 'Ф.И.О:'+ $data.fullName() + '; Почта: ' + $data.emailAddress() + '; ' + $data.phone()" class="well well-sm"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!--[if lte IE 8]>
        @Scripts.Render("~/bundles/Admin")
    <![endif]-->
    <!--[if !IE 8]><!-->
    @Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/Admin")
    <!--<![endif]-->
}