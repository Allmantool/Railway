@model NaftanRailway.BLL.DTO.Admin.ADUserDTO
@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="row">
    <div class="container-fluid">
        <table class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Ф.И.О:</th>
                    <th>Имя в домене:</th>
                    <th>Имя машины:</th>
                    <th>Почта:</th>
                    <th>Телефон:</th>
                </tr>
            </thead>
            <tbody>
                <tr data-bind="with: $root.adminPrincipal">
                    <td data-bind="text: displayName">@Model.Name</td>
                    <td data-bind="text: principalName">@Model.PrincipalName</td>
                    <td data-bind="text: sam">@Model.Sam</td>
                    <td data-bind="text: emailAddress">@Model.EmailAddress</td>
                    <td data-bind="text: phone">@Model.Phone</td>
                </tr>
            </tbody>
        </table>
        <h2 data-bind="text: 'Текущий пользователь: ' + $root.adminPrincipal().displayName()" class="page-header text-center"></h2>
        <div class="col-lg-3">
            <h3>Группы:</h3>
            <div data-bind="foreach: $root.adminPrincipal().groups" class="list-group small">
                <a data-bind="text: name, attr: {'href': $index()}, css: {'active': isSelected()}, click: $root.usersInGroup.bind($data)" class="list-group-item"></a>
            </div>
        </div>
        <div class="col-lg-9">
            <h3>Другие участники выбранной группы:</h3>
            <div data-bind="foreach: $root.userPrincipals" class="col-lg-12" style="float: left;">
                <div data-bind="text: name" class="well well-sm"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!--[if lte IE 8]>
        @Scripts.Render("~/bundles/Admin")
    <![endif]-->
    <!--[if !IE 8]><!-->
    @Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/Admin")
    <!--<![endif]-->
}