@using NaftanRailway.Domain.Concrete.DbContext.ORC
@model IEnumerable<krt_Naftan>
@{ int i = 0;}

@foreach (krt_Naftan item in Model){
    <tr class="@(item.Confirmed ? "" : "success")">
        <td class="vert-align">
            <input type="radio" name="optionsRadios" id="optionsRadios@(i++)" class="radio">
            <input type="hidden" class="hidden confirmed" value="@item.Confirmed.ToString()"/>
        </td>
        <td class="vert-align numberScroll">@item.NKRT</td>
        <td class="vert-align">
            @if (item.ErrorState != null){
                <img alt="Состояние проверки"
                        src="@(item.ErrorState.Value == 1 ? "/Content/Images/good_or_tick.png" : item.ErrorState.Value == 2 ? "/Content/Images/repair.png" : "/Content/Images/no.png")"
                        style="width: 24px; height: 24px"/>
            }
        </td>
        <td class="vert-align singCorrection"><span class = "@(item.SignAdjustment_list ? "glyphicon glyphicon-ok" : "")"></span></td>
        <td class="vert-align">@item.P_TYPE</td>
        <td class="vert-align DTBUHOTCHET">@item.DTBUHOTCHET.ToString("MMMM yyyy")</td>
        <td class="vert-align">@item.NTREB</td>
        <td class="vert-align">@(item.DTTREB == null ? "" : item.DTTREB.Value.ToString("dd.MM.yyyy"))</td>
        <td class="text-right vert-align">@item.SMTREB.ToString("#,#")</td>
        <td class="text-right vert-align">@item.NDSTREB.ToString("#,#")</td>
        <td class="vert-align">@item.StartDate_PER.ToString("dd.MM.yyyy")</td>
        <td class="vert-align">@item.EndDate_PER.ToString("dd.MM.yyyy")</td>
        <td class="vert-align">@String.Join(", ", @item.Scroll_Sbor.Split(','))</td>
        <td class="vert-align">@item.RecordCount</td>
        <td class="vert-align">@item.DATE_OBRABOT</td>
        <td class="vert-align">@item.CounterVersion</td>
    </tr>
}