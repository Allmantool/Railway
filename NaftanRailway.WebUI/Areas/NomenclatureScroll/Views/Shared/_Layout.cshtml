<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <base href = "@(string.Format("{0}://{1}{2}Nomenclature/Scroll", Request.Url.Scheme, Request.Url.Authority, Url.Content("~")))"/>
    <meta name="author" content="P. Chizhikov" />
    <meta name="Description" content="Nomenclature project" />
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="refresh" content="500" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     @Styles.Render("~/Content/cssbundle")
    <link rel="shortcut icon" href="~/Content/Images/AWT-Train.ico" type="image/x-icon" />
</head>
<body>
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <div class="row">
            <div class="collapse navbar-collapse">
                <div class="col-md-10">
                    <ul class="nav navbar-nav">
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                aria-haspopup="true" aria-expanded="false">Перечни ОРЦ<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Таблица  перечней</a></li>
                                <li><a href="@Url.Action("ScrollsDetails", "Scroll")">Таблица сборов</a></li>
                            </ul>
                        </li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                aria-haspopup="true" aria-expanded="false">Ведомости ГУ-46<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                            </ul>
                        </li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                aria-haspopup="true" aria-expanded="false">Акт ГУ-23<span class="caret"></span></a>
                            <ul class="dropdown-menu"></ul>
                        </li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                aria-haspopup="true" aria-expanded="false">Накопительные карточки ФДУ-92<span class="caret"></span></a>
                            <ul class="dropdown-menu"></ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">@User.Identity.Name <span class="glyphicon glyphicon-user"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">@RenderBody()</div>

