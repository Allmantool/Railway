<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <base href="@(string.Format("{0}://{1}{2}Nomenclature/Scroll", Request.Url.Scheme, Request.Url.Authority, Url.Content("~")))" />
    <meta name="author" content="P. Chizhikov" />
    <meta name="Description" content="Nomenclature project" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="refresh" content="18000" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content/cssbundle")
    <link rel="shortcut icon" href="~/Content/Images/AWT-Train.ico" type="image/x-icon" />
</head>
<body>
    <div class="navbar-custom navbar-static-top">
        <div class="container-fluid">
            <div class="row">
                <div class="collapse navbar-collapse">
                    <div class="col-md-10">
                        <ul class="nav navbar-nav small">
                            <li class="dropdown col-lg-2 row">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">Журнал<br/>Перечней ОРЦ<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Таблица  перечней</a></li>
                                    <li><a href="@Url.Action("ScrollsDetails", "Scroll")">Таблица сборов</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("Протокол сравнения данных из ACУ ОРЦ и ОБД САПОД", "ErrorReport", "Scroll", new {reportName = "orc-bch_compare_new"}, null)</li>
                                    <li>@Html.ActionLink("Протокол сравнения коррект. данных из ACУ ОРЦ и ОБД САПОД","ErrorReport","Scroll",new {reportName="orc-bch_corrections"},null)</li>
                                    <li role="separator" class="divider"></li>
                                </ul>
                            </li>
                            <li class="dropdown col-lg-2">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">Журнал<br/>Ведомостей ГУ-46<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li role="separator" class="divider"></li>
                                </ul>
                            </li>
                            <li class="dropdown col-lg-2">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">Журнал<br/>Актов<br/>ГУ-23<span class="caret"></span></a>
                                <ul class="dropdown-menu"></ul>
                            </li>
                            <li class="dropdown col-lg-4">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">Журнал<br/>Накопительных карточек ФДУ-92<span class="caret"></span></a>
                                <ul class="dropdown-menu"></ul>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-2">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">@User.Identity.Name <span class="glyphicon glyphicon-user"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if(TempData["message"] != null) {
        <div class="alert alert-info">@TempData["message"]</div>
    }
    <div class="panel row">
        <div class="container-fluid">@RenderBody()</div>
     </div>

<!--[if lte IE 8]>
    @Scripts.Render("~/bundles/JQuery1")
    @Scripts.Render("~/bundles/Jquery")
    @Scripts.Render("~/bundles/BootstrapIE8")
    @Scripts.Render("~/bundles/UserFunctions")
<![endif]-->
<!--[if !IE 8]><!-->
    @Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/JQuery2")
    @Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/Jquery")
    @Scripts.RenderFormat("<script src='{0}' defer></script>", "~/bundles/UserFunctions")
<!--<![endif]-->

    @RenderSection("scripts", required: false)
</body>
</html>
