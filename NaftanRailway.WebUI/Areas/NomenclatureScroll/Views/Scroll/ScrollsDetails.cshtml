@using NaftanRailway.Domain.Concrete.DbContext.ORC;
@model IEnumerable<krt_Naftan_orc_sapod>
@{
    ViewBag.Title = "Сборы по перечням";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="panel panel-default" style="margin-top: -1.8%;">
        <table class="small table table-hover table-responsive table-striped table-condensed table-bordered">
            <thead class="small">
                <tr>
                    <th class="text-center">№ Перечня</th>
                    <th class="text-center">Карточка(NKRT)</th>
                    <th class="text-center">Тип документа</th>
                    <th class="text-center">Вид сбора</th>
                    <th class="text-center">DT</th>
                    <th class="text-center">NOMOT</th>
                    <th class="text-center">Сумма без НДС</th>
                    <th class="text-center">Сумма НДС</th>
                    <th class="text-center">Сумма</th>
                    <th class="text-center">Ставка НДС</th>
                    <th class="text-center">Карточка</th>
                    <th class="text-center">Тип операции</th>
                    <th class="text-center">Дата обработки</th>
                    <th class="text-center">Тип документа</th>
                    <th class="text-center">Дата раскрытия</th>
                    <th class="text-center">Цена</th>
                    <th class="text-center">Кол-во</th>
                    <th class="text-center">Сумма</th>
                    <th class="text-center">НДС</th>
                    <th class="text-center">Примечание</th> 
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (krt_Naftan_orc_sapod item in Model) {
                    <tr>
                        <td>@item.nper <span class="hidden key">@item.keykrt</span></td>
                        <td>@item.nkrt</td>
                        <td>@item.tdoc</td>
                        <td>@item.vidsbr</td>
                        <td>@item.dt.ToString("dd.MM.yyyy")</td>
                        <td>@item.nomot</td>
                        <td>@item.sm_no_nds.ToString("#,#")</td>
                        <td>@item.sm_nds.ToString("#,#%")</td>
                        <td>@item.sm</td>
                        <td>@item.stnds</td>
                        <td>@item.nkrt</td>
                        <td>@item.p_type</td>
                        <td>@item.date_obrabot.ToString("Y")</td>
                        <td>@item.tdoc</td>
                        <td>@(item.date_raskr == null ? "" : item.date_raskr.Value.ToString("dd.MM.yyyy"))</td>
                        <td>@(item.cena == null ? "" : item.cena.Value.ToString("#,#"))</td>
                        <td>@item.kol</td>
                        <td>@(item.summa == null ? "" : item.summa.Value.ToString("#,#"))</td>
                        <td>@(item.nds == null ? "" : item.nds.Value.ToString("#,#"))</td>
                        <td>@item.textm</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

